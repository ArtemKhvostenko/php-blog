{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        {% if post.image_path %}
            <img src="{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }}">
        {% else %}
            <img src="https://dummyimage.com/300x200/5b76ba/ffffff" class="img-fluid" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted">John Doe | {{ post.created_at|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>
    </div>
{% endblock %}